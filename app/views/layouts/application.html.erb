<!DOCTYPE html>
<html>
<head>
  <title>SimpleCMS</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Simple CMS</a>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            <li><%= link_to "Submissions", submissions_path %></li>
            <li><%= link_to "Problems", problems_path %></li>
            <li><%= link_to "Contests", contests_path %></li>
          <% else %>
            <li><%= link_to "Sign In", signin_path %></li>
            <li><%= link_to "Regsiter", new_user_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <% flash.each do |k, v| %>
    <div class="alert alert-<%= k %> alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <%= v %>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
