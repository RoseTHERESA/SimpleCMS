<div class="header-container">
  <span class="h1">
    <%= @problem.title %>

    <% if @problem.solvers.include?(current_user) %>
      <small><span class="text-success">(Solved)</span></small>
    <% end %>

    <% if @problem.attempted_by?(current_user) %>
      <small>
        <%= render :partial => "point", :locals => { :problem => @problem, :user => current_user } %>
      </small>
    <% end %>

    <% if signed_in? && current_user.admin? %>
      <%= link_to icon("edit"), edit_problem_path(@problem), :class => "btn btn-default pull-right", :title => "Edit" %>
    <% end %>
  </span>
</div>

<div class="panel panel-default">
  <div class="panel-body" data-mathjax-source>
    <%= Kramdown::Document.new(@problem.statement).to_html.html_safe %>
  </div>
</div>

<% if signed_in? %>
  <% user_submissions = @problem.last_submissions_by(current_user) %>
  <% @problem.tasks.each do |task| %>
    <% submission = user_submissions[task.id] || Submission.new %>
    <div class="well">
    <%= form_for(submission, :url => submissions_path, :method => :post) do |f| %>
      <% if task.json? %>
        <%
          begin
          hash = JSON.parse(task.input)
          hash.each_with_index do |obj, index|
        %>
          <div class="form-group input-group">
            <span class="input-group-addon"><%= obj["label"] %></span>
            <% if obj["multiline"] %>
              <textarea class="form-control" id="input_<%= task.id %>_<%= index %>" readonly><%= obj["content"] %></textarea>
            <% else %>
              <input type="text" class="form-control" id="input_<%= task.id %>_<%= index %>" value="<%= obj["content"] %>" readonly>
            <% end %>
            <span class="input-group-btn">
              <button class="btn btn-default" type="button" data-clipboard-target="input_<%= task.id %>_<%= index %>">Copy</button>
            </span>
          </div>
        <%
          end
          rescue
            puts "Cannot parse JSON"
          end
        %>
      <% else %>
        <pre id="input-<%= task.id %>"><%= task.input %></pre>
        <button type="button" class="btn btn-default" data-clipboard-target="input-<%= task.id %>">
          Copy
        </button>
      <% end %>

      <%= f.hidden_field(:task_id, :value => task.id) %>

      <div class="form-group">
        <%= f.label :input, "Answer" %>
        <%= f.text_area :input, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :code_link, "Link to your code" %>
        <%= f.text_field :code_link, :class => "form-control" %>
      </div>

      <% if task.submissions_left_for(current_user).is_a? Numeric %>
        <p class="help-block">
          You have <%= pluralize(task.submissions_left_for(current_user), "submission") %> left.
        </p>
      <% end %>

      <% if task.allowed_to_submit?(current_user) %>
        <%= f.submit "Submit", :class => "btn btn-primary" %>
      <% else %>
        <%= f.submit "Submit", :class => "btn btn-primary disabled" %>
      <% end %>

      <% if task.solved_by?(current_user) %>
        <span class="label label-success">Solved!</span>
      <% elsif task.attempted_by?(current_user) %>
        <span class="label label-danger">Wrong answer</span>
      <% end %>
    <% end %>
    </div>
  <% end %>
<% else %>
  <p>Please sign in to solve this task.</p>
<% end %>
